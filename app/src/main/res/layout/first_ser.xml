<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:background="@color/teal_700"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:text="Enter your details."
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/UserCompany"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="Enter your Company name "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="textCapCharacters"
        android:hint="Enter your Gst no."
        android:gravity="center"
        android:id="@+id/UserGst"
        android:background="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:id="@+id/UserAddress"
        android:hint="Enter your Address"
        android:gravity="center"
        android:background="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="10dp"
        android:id="@+id/UserDescription"
        android:hint="Enter your Description"
        android:inputType="textCapSentences"
        android:gravity="center"
        android:background="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="number"
        android:id="@+id/UserNumber"
        android:hint="Enter your Phone Number"
        android:gravity="center"
        android:background="@color/white"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="230dp"
        android:backgroundTint="#016564"
        android:text="Done"
        android:id="@+id/UserDone"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>